            <texPath>Things/Buildings/TWB_VFE_TableStonecutterElectricMini/TWB_VFE_TableStonecutterElectricMini</texPath>
            <shaderType>CutoutComplex</shaderType>
          </graphicData>
          <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
          </stuffCategories>
